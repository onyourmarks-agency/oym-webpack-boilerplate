{
	"name": "tde-webpack-boilerplate",
	"version": "4.0.3",
	"main": "app.js",
	"license": "MIT",
	"config": {
		"node": "16"
	},
	"scripts": {
		"watch": "node webpack/pre-script.js && webpack --watch --config webpack/webpack.config.js --stats-children",
		"build": "node webpack/pre-script.js && NODE_ENV=prod webpack --mode production --config webpack/webpack.config.js --stats-children",
		"frontend-cs": "pnpm format && pnpm eslint && pnpm stylelint",
		"lint": "pnpm prettier --check . --plugin-search-dir=. && pnpm eslint && pnpm stylelint",
		"eslint": "node webpack/pre-script.js && eslint assets --cache --ext .js,.svelte --ignore-path .gitignore",
		"eslint-fix": "node webpack/pre-script.js && eslint assets --cache --fix --ext .js,.svelte --ignore-path .gitignore",
		"format": "node webpack/pre-script.js && prettier --write . --plugin-search-dir=.",
		"format-az": "node webpack/pre-script.js && ORDER=alphabetical prettier --write . --plugin-search-dir=",
		"stylelint": "stylelint -f verbose --cache 'assets/**/*.{css,scss,svelte}'",
		"stylelint-fix": "stylelint -f verbose --cache 'assets/**/*.{css,scss,svelte}' --fix"
	},
	"dependencies": {
		"bazinga-translator": "^5.0.0",
		"formbouncerjs": "^1.4.6",
		"jump.js": "^1.0.2",
		"normalize.css": "^8.0.1",
		"outdated-browser-rework": "git+https://github.com/tdeNL/outdated-browser-rework.git",
		"svelte": "^3.46.4",
		"svgxuse": "^1.2.6",
		"swiper": "^8.0.7"
	},
	"devDependencies": {
		"@babel/cli": "^7.17.6",
		"@babel/core": "^7.17.5",
		"@babel/eslint-parser": "^7.17.0",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.16.11",
		"@considonet/stylelint-config-bem": "^1.0.1",
		"@considonet/stylelint-config-scss": "^1.0.1",
		"@nuxt/friendly-errors-webpack-plugin": "^2.5.2",
		"autoprefixer": "^10.4.2",
		"babel-loader": "^8.2.3",
		"babel-preset-env": "^1.7.0",
		"browserslist": "^4.20.0",
		"check-node-version": "^4.2.1",
		"clean-webpack-plugin": "^4.0.0",
		"core-js": "^3.21.1",
		"css-loader": "^6.7.1",
		"css-minimizer-webpack-plugin": "^3.4.1",
		"eslint": "^8.10.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-compat": "^4.0.2",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.29.3",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-svelte3": "^3.4.1",
		"eslint-webpack-plugin": "^3.1.1",
		"fsevents": "2.3.2",
		"glob": "^7.2.0",
		"html-webpack-plugin": "^5.5.0",
		"lodash": "^4.17.21",
		"mini-css-extract-plugin": "^2.6.0",
		"picturefill": "^3.0.3",
		"postcss": "^8.4.8",
		"postcss-loader": "^6.2.1",
		"prettier": "2.5.1",
		"prettier-plugin-css-order": "^1.1.0",
		"sass": "^1.49.9",
		"sass-loader": "^12.6.0",
		"style-loader": "^3.3.1",
		"stylelint": "^13.13.1",
		"stylelint-selector-bem-pattern": "^2.1.1",
		"svelte-loader": "^3.1.2",
		"svelte-preprocess": "^4.10.4",
		"svelte-preprocess-sass": "^2.0.1",
		"svg-sprite-loader": "^6.0.11",
		"tde-webpack-svg-plugin": "^3.0.0",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2",
		"webpack-extraneous-file-cleanup-plugin": "^2.0.0",
		"webpack-manifest-plugin": "^5.0.0",
		"webpack-notifier": "^1.15.0",
		"webpack-retry-chunk-load-plugin": "^3.0.0"
	},
    "pnpm": {
        "peerDependencyRules": {
            "allowedVersions": {
                "postcss": "5.2.18"
            }
        }
    },
	"browserslist": {
		"production": [
			"> 1%",
			"not ie <= 10",
			"not op_mini all"
		],
		"modern": [
			"last 1 chrome version",
			"last 1 firefox version"
		]
	}
}
